{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "namespace": "default",
        "name": "myapp-01",
        "labels": {
            "name": "myapp-01"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "myapp",
                "image": "gcr.io/google-containers/pause:3.2",
                "resources": {
                    "limits": {
                        "memory": "128Mi",
                        "cpu": "500m"
                    }
                }
            }
        ]
    }
}
